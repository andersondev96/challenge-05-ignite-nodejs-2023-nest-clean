generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  DELIVERYMAN
  ADMIN
}

enum StatusOrder {
  WAITING
  WITHDRAWN
  DELIVERED
  RETURNED
}

model User {
  id       String   @id @default(uuid())
  name     String
  cpf      String   @unique
  password String
  role     UserRole @default(DELIVERYMAN)

  recipient Recipient[]
  order     Order[]

  @@map("users")
}

model Recipient {
  id        String   @id @default(uuid())
  name      String
  address   String
  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @default(now()) @map("updated_at")
  userId    String   @map("user_id")

  user  User    @relation(fields: [userId], references: [id])
  order Order[]

  @@map("recipients")
}

model Order {
  id            String       @id @default(uuid())
  product       String
  details       String
  image         String?
  status        StatusOrder? @default(WAITING)
  withdrawnDate DateTime?    @map("withdrawn_date")
  deliveryDate  DateTime?    @map("delivery_date")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime?    @default(now()) @map("updated_at")
  recipientId   String       @map("recipient_id")
  deliverymanId String       @map("deliveryman_id")

  recipient   Recipient @relation(fields: [recipientId], references: [id])
  deliveryman User      @relation(fields: [deliverymanId], references: [id])

  @@map("orders")
}
